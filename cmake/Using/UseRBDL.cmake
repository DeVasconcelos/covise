MACRO(USE_RBDL)
  USE_EIGEN()
  set(CMAKE_PREFIX_PATH "$ENV{EXTERNLIBS}/rbdl" ${CMAKE_PREFIX_PATH})
  
  covise_find_package(rbdl)
  IF ((NOT RBDL_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing RBDL")
    RETURN()
  ENDIF((NOT RBDL_FOUND) AND (${ARGC} LESS 1))
  IF(NOT RBDL_USED AND RBDL_FOUND)
    SET(RBDL_USED TRUE)
    INCLUDE_DIRECTORIES(SYSTEM ${RBDL_INCLUDE_DIRS})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${RBDL_LIBRARIES})
  ENDIF()
ENDMACRO(USE_RBDL)

