MACRO(USE_TINYGLTF)
  covise_find_package(TinyGLTF)
  IF ((NOT TinyGLTF_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing TinyGLTF")
    RETURN()
  ENDIF((NOT TinyGLTF_FOUND) AND (${ARGC} LESS 1))
  IF(NOT TinyGLTF_USED AND TinyGLTF_FOUND)
    SET(TinyGLTF_USED TRUE)
    USE_OPENGL()
    INCLUDE_DIRECTORIES(SYSTEM ${TinyGLTF_INCLUDE_DIR})
  ENDIF()
ENDMACRO(USE_TINYGLTF)
  
