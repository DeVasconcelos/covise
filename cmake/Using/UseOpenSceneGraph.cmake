MACRO(USE_OPENSCENEGRAPH)
  IF ((NOT OPENSCENEGRAPH_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing OPENSCENEGRAPH")
    RETURN()
  ENDIF((NOT OPENSCENEGRAPH_FOUND) AND (${ARGC} LESS 1))
  IF(NOT OPENSCENEGRAPH_USED AND OPENSCENEGRAPH_FOUND)
    SET(OPENSCENEGRAPH_USED TRUE)
    INCLUDE_DIRECTORIES(SYSTEM ${OPENSCENEGRAPH_INCLUDE_DIRS})
	ADD_DEFINITIONS(-DHAVE_OPENSCENEGRAPH)
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${OPENSCENEGRAPH_LIBRARIES})
  ENDIF()
ENDMACRO(USE_OPENSCENEGRAPH)

