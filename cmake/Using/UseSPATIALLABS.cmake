MACRO(USE_SPATIALLABS)
  COVISE_FIND_PACKAGE(SPATIALLABS)
  IF ((NOT SPATIALLABS_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing SPATIALLABS")
    RETURN()
  ENDIF((NOT SPATIALLABS_FOUND) AND (${ARGC} LESS 1))
  IF(NOT SPATIALLABS_USED AND SPATIALLABS_FOUND)
    SET(SPATIALLABS_USED TRUE)
    INCLUDE_DIRECTORIES(SYSTEM ${SPATIALLABS_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${SPATIALLABS_LIBRARIES})
  ENDIF()
ENDMACRO(USE_SPATIALLABS)

