MACRO(USE_DRACO)
  covise_find_package(DRACO)
  IF ((NOT DRACO_FOUND) AND (${ARGC} LESS 1))
    USING_MESSAGE("Skipping because of missing DRACO")
    RETURN()
  ENDIF((NOT DRACO_FOUND) AND (${ARGC} LESS 1))
  IF(NOT DRACO_USED AND DRACO_FOUND)
    SET(DRACO_USED TRUE)
    USE_OPENGL()
	ADD_DEFINITIONS(-DTINYGLTF_ENABLE_DRACO)
    INCLUDE_DIRECTORIES(SYSTEM ${DRACO_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${DRACO_LIBRARIES})
  ENDIF()
ENDMACRO(USE_DRACO)
  
